	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@tailwindcss/ui": "^0.3.0",
		"debug.css": "https://github.com/codex-src/debug.css",
		"serve": "^11.3.2",
		"tailwindcss": "^1.4.6"
	}
