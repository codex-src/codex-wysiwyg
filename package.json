	"scripts": {
		"tailwind-start": "tailwind build src/stylesheets/tailwind.css -o src/stylesheets/tailwind.generated.css",
		"start": "react-scripts start",
		"tailwind-build": "NODE_ENV=production yarn tailwind-start",
